{
    // Cloud and Telemetry Settings
    "pieces.cloudCapabilities": "Blended",  // Cloud capabilities for the Pieces extension (Blended: combines cloud and local storage)
    "pieces.telemetry": true,  // Telemetry is enabled to gather usage statistics
    "pieces.customUrl": "http://192.168.1.35:1000",  // Custom URL for Pieces integration
    

    // Editor Settings
    "editor.minimap.enabled": false,  // Disable minimap in the editor
    "editor.hover.delay": 1500,  // Hover delay before tooltips appear
    "editor.fontFamily": "Geist Mono, JetBrains Mono, Fira Code",  // Fonts to be used in the editor
    "editor.suggestFontSize": 16,  // Font size in the suggestion dropdown
    "editor.suggestLineHeight": 30,  // Line height in the suggestion dropdown
    "editor.fontSize": 16,  // Default font size in the editor
    "editor.lineHeight": 28,  // Line height for the editor
    "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",  // Custom word separators in the editor
    "editor.cursorBlinking": "smooth",  // Smooth blinking cursor animation
    "editor.cursorWidth": 3,  // Set the width of the cursor
    "editor.cursorSmoothCaretAnimation": "on",  // Enable smooth caret animation
    "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'calt', 'dlig'",

    // Terminal Settings
    "terminal.integrated.lineHeight": 1,  // Line height for the integrated terminal
    "terminal.integrated.fontSize": 12,  // Font size for the integrated terminal
    "terminal.integrated.letterSpacing": 2,  // Letter spacing in the terminal
    "terminal.integrated.fontFamily": "MesloLGL Nerd Font Mono",  // Custom font for the terminal
    "terminal.integrated.cursorBlinking": true,  // Enable blinking cursor in terminal
    "terminal.integrated.cursorStyle": "line",  // Cursor style for active terminal (line)
    "terminal.integrated.cursorStyleInactive": "line",  // Cursor style for inactive terminal
    "terminal.integrated.accessibleViewPreserveCursorPosition": true,  // Preserves cursor position in accessible terminal view

    // Workbench and Layout Settings
    "workbench.editor.showTabs": "single",  // Show a single tab for the editor
    "workbench.statusBar.visible": false,  // Hide the status bar
    "workbench.colorTheme": "React Theme",  // Color theme for the workbench
    "workbench.iconTheme": "material-icon-theme",  // Icon theme for the workbench
    "workbench.activityBar.location": "hidden",  // Hide the activity bar (left sidebar)
    "workbench.layoutControl.enabled": false, // Compact mode for the menu bar

    // Explorer Settings
    "explorer.confirmDragAndDrop": false,  // Disable confirmation for drag and drop in the explorer
    "search.exclude": {
        "**/node_modules": true,  // Exclude node_modules from search results
        "**/dist": true,  // Exclude dist folder from search results
        "**/_ide_helper.php": true,  // Exclude specific files from search
        "**/composer.lock": true,
        "**/package-lock.json": true,
        "storage": true,
        ".phpunit.result.cache": true
    },

    // Custom CSS and JS
    "vscode_custom_css.imports": [
        "file:///C:/CODE/custom-vscode.css",  // Custom CSS file for additional styling
        "file:///C:/CODE/custom-vscode-script.js"  // Custom JS file for additional functionality
    ],

    // CodeSnap Settings (for taking code screenshots)
    "codesnap.boxShadow": "rgba(0, 0, 0, 0.55) 0px 12px 24px",  // Shadow effect for CodeSnap
    "codesnap.backgroundColor": "#FFC540",  // Background color for the CodeSnap screenshots
    "codesnap.showLineNumbers": false,  // Disable line numbers in CodeSnap screenshots
    "codesnap.roundedCorners": true,  // Enable rounded corners in CodeSnap

    // Codegeex Settings (AI assistant-related settings)
    "Codegeex.Privacy": true,  // Enable privacy settings for Codegeex
    "Codegeex.Chat.LanguagePreference": "English",  // Preferred language for Codegeex chat
    "Codegeex.Comment.LanguagePreference": "English",  // Preferred language for Codegeex comments
    "Codegeex.SidebarUI.LanguagePreference": "English",  // Preferred language for Codegeex sidebar

    // Git Settings
    "git.openRepositoryInParentFolders": "always",  // Automatically open repository in parent folders

    // Remote Development Settings
    "remote.autoForwardPortsSource": "hybrid",  // Hybrid approach for automatic port forwarding

    // Miscellaneous Settings
    "extensions.ignoreRecommendations": true,  // Ignore extension recommendations
    "security.workspace.trust.untrustedFiles": "open",
    "editor.guides.indentation": false,
    "files.autoSave": "afterDelay",
    "window.menuBarVisibility": "compact", // Automatically open untrusted files in the workspace

}
